<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.elsicaldeira.matchspanishword.FeedbackActivity" xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout android:layout_width="match_parent"
        android:id="@+id/view_feedback"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:gravity="top|center_vertical"
      >

        <ImageView
            android:layout_width="@dimen/logo_feed"
            android:layout_height="wrap_content"
            android:src="@drawable/titulo"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.4"
            android:layout_marginBottom="@dimen/space_bottom"
            />
        <TextView
            android:id="@+id/feedbackView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:textSize="@dimen/feedback_size"
            android:textColor="@color/feed"
            android:textStyle="bold"
            android:text="@string/feedback_neg_lifes"
            android:gravity="center_horizontal|center_vertical"
           />
        <Button
            android:id="@+id/playagainBtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/play_again_btn"
            android:textColor="@color/text_color"
            android:background="@color/button_bg"
            android:padding="15dp"
            android:textAllCaps="true"
            android:layout_weight="0.2"
            android:textSize="@dimen/button_label"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginTop="@dimen/space_top"
            android:layout_marginBottom="@dimen/space_bottom"
            style="?android:borderlessButtonStyle"
            />
    </LinearLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:clickable="true"
        android:src="@drawable/ic_share"
        app:rippleColor="@color/color_primary"
        app:layout_anchor="@id/view_feedback"
        app:layout_anchorGravity="bottom|right|end"/>

</android.support.design.widget.CoordinatorLayout>